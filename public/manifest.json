{
  "manifest_version": 3,
  "name": "Stake Limbo Bot",
  "description": "Configurable stake limbo bot",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [{
    "js": ["js/content.js"],
    "matches": [
      "https://*.stake.com/*"
    ]
  }]
}
